<h2>Movies Home</h2>
<h3>Search for a movie</h3>
<form action="/get" method="POST">
    Title:
    <input type="text" name="title" id="title">
    <input type="submit">
</form>

{{#if movies}}
    <h3>All the movies in the database:</h3>
{{else}}
    <h1>Zip. Zilch. Zero.</h1>
{{/if}}
{{#each movies}}
    <li><a href="/get?title={{title}}">{{title}}</a></li>
{{/each}}